{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/dist/$1"
        }
    ],
    "functions": {
        "api/index.py": {
            "excludeFiles": "{frontend/**,node_modules/**,backend/tests/**}"
        }
    }
}